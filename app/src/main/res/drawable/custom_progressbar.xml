<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                    android:startColor="@color/dark_gray"
                    android:centerColor="@color/dark_gray"
                    android:centerY="1.0"
                    android:endColor="@color/dark_gray"
                    android:angle="270"
                    />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                        android:startColor="@color/light_yellow"
                        android:centerColor="@color/light_yellow"
                        android:centerY="1.0"
                        android:endColor="@color/light_yellow"
                        android:angle="270"
                        />
            </shape>
        </clip>
    </item>
</layer-list>